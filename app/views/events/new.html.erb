<%= content_for(:header) do %>
	<%= render partial: 'events/shared/header' %>
<% end %>

<%= render partial: 'events/shared/no_sidebar' %>


<%- if @event.errors.any? %>
	<div class="alert alert-danger">
		Please fill the mandatory fields
		<button type="button" class="close">&times;</button>
	</div>
<% end %>
<div class="row">
	<%= form_for @event, url: events_path, :html => {:multipart => true} do |f| %>
		<div class='form-horizontal row'>
			<div class="col-xs-12 col-sm-offset-1 col-sm-8">
				<div class="form-container">
					<div class='form-group'>
						<div class='col-lg-4 col-md-4 col-sm-5 col-xs-4'>
							<%= f.label :name %>
							<span class="required">*</span>
						</div>
						<div class='col-lg-8 col-md-8 col-sm-7 col-xs-12'>
							<%= f.text_field :name, class: 'form-control', autofocus: true, maxlength: 250, required: true %>
						</div>
					</div>

					<div class="form-group">
						<div class='col-lg-4 col-md-4 col-sm-5 col-xs-4'>
							<%= f.label :event_date %>
							<span class="required">*</span>
						</div>
						<div class='col-lg-8 col-md-8 col-sm-7 col-xs-12'>
							<%= f.text_field :event_date, class: 'form-control date-picker', required: true, 'data-date-format' => "dd/mm/yyyy" %>
						</div>
					</div>

					<div class="form-group">
						<div class='col-lg-4 col-md-4 col-sm-5 col-xs-4'>
							<%= f.label :submission_close_date %>
							<span class="required">*</span>
						</div>
						<div class='col-lg-8 col-md-8 col-sm-7 col-xs-12'>
							<%= f.text_field :submission_close_date, class: 'form-control date-picker', required: true, 'data-date-format' => "dd/mm/yyyy" %>
						</div>
					</div>

					<div class="form-group">
						<div class='col-lg-4 col-md-4 col-sm-5 col-xs-4'>
							<%= f.label :voting_close_date %>
							<span class="required">*</span>
						</div>
						<div class='col-lg-8 col-md-8 col-sm-7 col-xs-12'>
							<%= f.text_field :voting_close_date, class: 'form-control date-picker', required: true, 'data-date-format' => "dd/mm/yyyy" %>
						</div>
					</div>

					<div class="form-group">
						<div class='col-lg-4 col-md-4 col-sm-5 col-xs-4'>
							<%= f.label :Avatar %>
							<span class="required">*</span>
						</div>
						<div class='col-lg-8 col-md-8 col-sm-7 col-xs-12'>
							<%= f.file_field :avatar, class: 'form-control', required: true %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-lg-offset-4 col-md-offset-4 col-sm-offset-5 col-xs-offset-4">
							<%= f.submit 'Submit', class: 'btn', id: 'submit_event' %>
						</div>
					</div>
				</div>
			</div>
			<div class="col-sm-3"></div>
		</div>

	<% end %>

</div>