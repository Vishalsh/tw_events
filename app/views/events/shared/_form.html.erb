<div class='event-form'>
	<%- if @event.errors.any? %>
		<div class="alert alert-danger clearfix">
			<div class="pull-left">
				<strong>Please check for the following errors:</strong>
				<ul>
					<% @event.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>

			<button type="button" class="close" data-dismiss="alert">
				<span aria-hidden="true">&times;</span>
				<span class="sr-only">Close</span>
			</button>
		</div>
	<% end %>

	<%= form_for @event, :html => {:multipart => true} do |f| %>
		<div class='form-horizontal'>

			<div class="form-group">
				<div class='col-xs-12'>
					<%= f.label :name %>
					<span class="required">*</span>

					<div>
						<%= f.text_field :name, class: 'form-control', placeholder: 'name', required: true %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class='col-xs-12'>
					<%= f.label :event_date %>
					<span class="required">*</span>

					<div>
						<%= f.text_field :event_date, class: 'form-control date-picker no-editing', placeholder: 'event date', required: true, autocomplete: 'off' %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class='col-xs-12'>
					<%= f.label :submission_close_date %>
					<span class="required">*</span>

					<div>
						<%= f.text_field :submission_close_date, class: 'form-control date-picker no-editing', placeholder: 'after event date', required: true, autocomplete: 'off' %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class='col-xs-12'>
					<%= f.label :voting_close_date %>
					<span class="required">*</span>

					<div>
						<%= f.text_field :voting_close_date, class: 'form-control date-picker no-editing', placeholder: 'after submission end date', required: true, 'data-date-format' => "dd/mm/yyyy", autocomplete: 'off' %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class='col-xs-12'>
					<%= f.label :description %>
					<span class="required">*</span>

					<div>
						<%= f.text_area :description, class: 'form-control', placeholder: 'about the event', required: true %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class='col-xs-12'>
					<%= f.label :Avatar %>
					<span class="required">*</span>

					<div>
						<%= f.file_field :avatar, class: 'form-control', required: true %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class='col-xs-12'>
					<% if @event.name.nil? %>
						<%= f.submit 'submit', class: 'btn col-xs-offset-3 col-xs-6', id: 'submit_event' %>
					<% else %>
						<%= f.submit 'update', class: 'btn col-xs-offset-3 col-xs-6', id: 'submit_event' %>
					<% end %>
				</div>
			</div>

		</div>

	<% end %>
</div>
