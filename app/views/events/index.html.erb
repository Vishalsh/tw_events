<%= content_for(:header) do %>
	<%= render partial: 'events/shared/header' %>
<% end %>

<div id="main-content" class="event-list">

	<%= render partial: 'events/shared/no_sidebar' %>

	<%- @events.each do |event| %>
		<a class="row event">
			<div class="col-xs-4">
				<%= image_tag event.avatar.url(:thumb) %>
			</div>
			<div class="col-xs-4 text-center">
				<h1 class="no-margin"><strong><%= event.name %></strong></h1>
				<h4 class="no-margin event-date"><%= event.event_date %></h4>
			</div>
			<div class="col-xs-4 text-right">
				<span class="icon glyphicon glyphicon-chevron-right"></span>
			</div>
		</a>
	<% end %>
</div>